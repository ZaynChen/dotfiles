//
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space w": "workspace::Save",
      "space f": "file_finder::Toggle",
      "space /": "pane::DeploySearch",
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide",
      "] h": "editor::GoToHunk",
      "[ h": "editor::GoToPreviousHunk",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-v": "editor::Paste",
    },
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious",
      "ctrl-y": "editor::ConfirmCompletion",
      "ctrl-k": "editor::ContextMenuPrevious",
      "ctrl-j": "editor::ContextMenuNext",
    },
  },
  {
    "context": "Picker > Editor",
    "bindings": {
      "tab": "menu::SelectNext",
      "shift-tab": "menu::SelectPrevious",
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-j": "menu::SelectNext",
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-w": null,
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-shift-e": "workspace::CloseActiveDock",
    },
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-shift-g": "git_panel::Close",
    },
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "ctrl-?": "workspace::CloseActiveDock",
    },
  },
  {
    "context": "OutlinePanel",
    "bindings": {
      "ctrl-shift-b": "workspace::CloseActiveDock",
    },
  },
  {
    "context": "CollabPanel",
    "bindings": {
      "ctrl-shift-c": "workspace::CloseActiveDock",
    },
  },
  {
    "context": "DebugPanel",
    "bindings": {
      "ctrl-shift-d": "workspace::CloseActiveDock",
    },
  },
]
