// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "theme": {
    "mode": "light",
    "light": "One Light",
    "dark": "One Dark",
  },
  "icon_theme": "Zed (Default)",
  // The name of a base set of key bindings to use.
  // This setting can take six values, each named after another
  // text editor:
  //
  // 1. "VSCode"
  // 2. "Atom"
  // 3. "JetBrains"
  // 4. "None"
  // 5. "SublimeText"
  // 6. "TextMate"
  "base_keymap": "VSCode",
  // Features that can be globally enabled or disabled
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_fallbacks": [".ZedMono", "WenQuanYi Zen Hei Mono"],
  "buffer_font_size": 16,
  "buffer_font_weight": 500, // Default: 400
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_fallbacks": [".ZedSans", "WenQuanYi Zen Hei"],
  "ui_font_size": 16,
  "ui_font_weight": 500,
  "vim_mode": true,
  "helix_mode": false,
  "colorize_brackets": true,
  "auto_signature_help": true,
  "show_signature_help_after_edits": false,
  "show_whitespaces": "trailing",
  "whitespace_map": {
    "space": "⋅",
    "tab": "→",
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true,
  },
  "minimap": {
    "show": "never",
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "indent_aware",
  },
  "relative_line_numbers": "enabled",
  "use_smartcase_search": true,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_value_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "shift": false,
      "alt": false,
      "platform": false,
      "function": false,
    },
  },
  "project_panel": {
    "dock": "right",
    "show_diagnostics": "off",
  },
  "outline_panel": {
    "dock": "right",
  },
  "collaboration_panel": {
    "dock": "right",
  },
  "git_panel": {
    "dock": "right",
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "off",
  },
  "tab_size": 2,
  "lsp_document_colors": "inlay",
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "max_severity": "warning",
    },
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "show_commit_summary": true,
    },
  },
  "edit_predictions": {
    "mode": "eager",
    "enabled_in_text_threads": true,
  },
  "terminal": {
    "shell": "system",
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "alternate_scroll": "on",
    "option_as_meta": false,
    "copy_on_select": false,
    "keep_selection_on_copy": false,
    "button": true,
    "env": {},
    "line_height": "comfortable",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default",
      },
    },
    "toolbar": {
      "breadcrumbs": true,
    },
    "scrollbar": {
      "show": null,
    },
    "font_family": "FiraCode Nerd Font Mono",
    "font_size": 15,
    "minimum_contrast": 45,
  },
  "session": {
    "trust_all_worktrees": true,
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy", // rust-analyzer.check.command (default: "check")
        },
      },
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true, // Enforces alphabetical ordering of keys in maps
        },
      },
    },
  },
  "vim": {
    "default_mode": "normal",
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
  },
  "which_key": {
    "enabled": true,
  },
  "proxy": "http://127.0.0.1:7893",
}
